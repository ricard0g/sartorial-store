<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if settings.favicon != blank %}
      <link rel="icon" type="image/x-icon" href="{{ settings.favicon | asset_url }}">
    {% else %}
      <link rel="icon" type="image/x-icon" href="{{ 'favicon-sartorial.svg' | asset_url }}">
    {% endif %}
    {{ content_for_header }}
    <title>{% if settings.store_title != blank %}{{ settings.store_title }}{% else %}Sartorial Paris{% endif %}</title>
    <script src="{{ 'global.js' | asset_url }}" defer></script>
    <style>
      *,
      *::before,
      *:after {
        box-sizing: border-box;
      }

      html {
        font-size: 16px;
      }

      body {
        padding: 0;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <header>
      {% sections 'header-group' %}
    </header>
    <main>
      {{ content_for_layout }}
    </main>
  </body>
</html>
